{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "StartJekyll",
      "type": "shell",
      "group": "build",
      "command": "bundle exec jekyll serve",
      "isBackground": true
    },
    {
      "label": "StopJekyll",
      "type": "shell",
      "group": "none",
      "command": "pkill -f jekyll || true"
    }
  ]
}